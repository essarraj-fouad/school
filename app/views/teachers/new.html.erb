<h1><%= t('.title') %></h1>

<%= form_for @teacher do |f| %>
  <%= f.label :name %>: <%= f.text_field :name %>
  <%= f.label :classroom %>: <%= f.collection_select :classroom_id, @classrooms, :id, :level_with_sublevel, prompt: true %>
  <%= f.fields_for :subjects do |p| %>
    <%= p.label :subject %>: <%= p.select :name, t('.subjects') %>
  <% end %>
  <%= f.submit %>
<% end %>

<p>
<%= link_to t('.home'), root_path %>
</p>

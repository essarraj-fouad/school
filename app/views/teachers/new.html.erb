<h1>Teachers</h1>

<%= form_for @teacher do |f| %>
  Name: <%= f.text_field :name %>
  Classroom: <%= f.collection_select :classroom_id, @classrooms, :id, :level, prompt: true %>
  <%= f.fields_for :subjects do |p| %>
    Subject: <%= p.select :name, ["Math", "Science", "Physics"] %>
  <% end %>
  <%= f.submit %>
<% end %>

<p>
<%= link_to "Home", root_path %>
</p>

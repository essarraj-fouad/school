<h1><%= t('.title') %></h1>

<%= form_for @student do |f| %>
  <%= t('.name') %>: <%= f.text_field :name %>
  <%= t('.classroom') %>: <%= f.collection_select :classroom_id, @classrooms, :id, :level_with_sublevel, prompt: true %>
  <%= t('.period') %>: <%= f.select :period, t('.periods') %>
  <%= f.submit %>
<% end %>

<p>
<%= link_to t('.home'), root_path %>
</p>

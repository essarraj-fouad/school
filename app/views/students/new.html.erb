<h1>Students</h1>

<%= form_for @student do |f| %>
  Name: <%= f.text_field :name %>
  Classroom: <%= f.collection_select :classroom_id, @classrooms, :id, :level, prompt: true %>
  Period: <%= f.select :period, ["Day", "Night"] %>
  <%= f.submit %>
<% end %>

<p>
<%= link_to "Home", root_path %>
</p>

<h1>Home</h1>

<p>
<%= flash[:notice] %>
</p>

<% @classrooms.each do |classroom| %>
<h2><%= classroom.sublevel%></h2>
<table>
  <thead>
    <tr>
      <th>Level</th>
      <th>Student</th>
      <th>Teacher</th>
      <th>Subject</th>
      <th>Period</th>
    </tr>
  </thead>
  <tbody>
  <tr>
    <td>
      <%= classroom.level%>
    </td>
    <td>
      <% classroom.students.each do |student| %>
	<p>
	  <%= student.name %>
	</p>
      <% end %>
    </td>
    <td>
      <% classroom.teachers.each do |teacher| %>
	<p>
	  <%= teacher.name %>
	</p>
      <% end %>
    </td>
    <td>
      <% classroom.teachers.each do |teacher| %>
	<% teacher.subjects.each do |subject| %>
	  <p>
	    <%= subject.name %>
	  </p>
	<% end %>
      <% end %>
    </td>
    <td>
      <% classroom.students.each do |student| %>
	<%= student.period %>
      <% end %>
    </td>
  </tr>
  </tbody>
</table>
<% end %>

<p>
<%= link_to "Create Classroom", new_classroom_path %>
<br>
<%= link_to "Create Student", new_student_path %>
<br>
<%= link_to "Create Teacher", new_teacher_path %>
</p>

